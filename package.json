{
  "name": "@paulp-o/opencode-async-agents-turbo",
  "version": "0.3.0",
  "description": "Background task management plugin for OpenCode AI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "keywords": [
    "opencode",
    "plugin",
    "background-task",
    "ai",
    "agent"
  ],
  "license": "MIT",
  "author": "paulpark",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulp-o/opencode-async-agents-turbo.git"
  },
  "bugs": {
    "url": "https://github.com/paulp-o/opencode-async-agents-turbo/issues"
  },
  "homepage": "https://github.com/paulp-o/opencode-async-agents-turbo#readme",
  "peerDependencies": {
    "@opencode-ai/plugin": "^1.0.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.0.0",
    "@biomejs/biome": "^1.9.4",
    "@semantic-release/changelog": "^6.0.3",
    "@types/bun": "^1.3.4",
    "semantic-release": "^24.2.3",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --format esm --sourcemap=linked",
    "build:types": "tsc --emitDeclarationOnly",
    "build:all": "rm -rf dist && bun run build && bun run build:types",
    "clean": "rm -rf dist",
    "lint": "biome check src/",
    "format": "biome format src/ --write",
    "check": "biome check src/",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build:all && bun run typecheck && bun test",
    "deploy": "node scripts/deploy.mjs",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "release": {
    "branches": [
      "main",
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "@anthropic-ai/tokenizer": "^0.0.4",
    "zod": "^4.3.5"
  }
}
